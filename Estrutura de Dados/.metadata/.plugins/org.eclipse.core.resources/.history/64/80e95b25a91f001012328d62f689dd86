package atividade03;

public class ListaDuplamenteEncadeada {
	private No fim = null;
	private No inicio = null;
	private int tamanho = 0;

	public void inserirInicio(int aluno) {
		No novoNo = new No();
		novoNo.setAluno(aluno);
		if (tamanho == 0) {
			novoNo.setProximo(inicio);
			inicio.setAnterior(novoNo);
			inicio = fim = novoNo;
		}
	}

	public void inserirFim(int aluno) {
		No novoNo = new No();
		novoNo.setAluno(aluno);
		if (tamanho == 0) {
			fim.setProximo(novoNo);
			novoNo.setAnterior(fim);
			inicio = fim = novoNo;
		}

	}

	public void listarAlunos() {
		No aux = inicio;
		if(aux != null) {
			while (aux !=null) {
				System.out.println(aux.getAluno());
				aux =aux.getProximo();
			}
			
		}else {
			System.out.println("Lista Vazia.........");
		}
	}
}
